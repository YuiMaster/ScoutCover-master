<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@android:color/black"
    >
<!--  com.wind.smartcover.phone.ClickView-->
<com.wind.smartcover.phone.ClickView
    android:layout_marginTop="@dimen/activitys_padding_top"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="@android:color/black" >

    <RelativeLayout
        android:layout_width="@dimen/second_width"
        android:layout_height="@dimen/incoming_a_height"
        android:layout_centerHorizontal="true"
        android:background="@drawable/incoming_bg_a" >

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:textColor="@color/phone_num_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- com.example.phonestatusservice.save.ClickView
     -->
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="@dimen/second_width"
        android:layout_height="@dimen/second_height"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:layout_width="@dimen/second_width"
            android:layout_height="@dimen/incoming_b_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/incoming_a_height"
            android:background="@drawable/incoming_bg_b" />

        <ImageButton
            android:clickable="true"
            android:id="@+id/btn_hang_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="176dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_hangon"
            />
        
        <ImageButton
            android:clickable="true"
            android:id="@+id/btn_end_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="176dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_hangoff" 
            />

        <ImageButton
            android:clickable="true"
            android:id="@+id/btn_hang_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="176dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/btn_hangoff" 
            />

        <!-- 116+18 -->

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="134dp"
            android:textColor="@color/phone_status_color"
            android:textSize="14sp" />
        <!-- 116+36 -->

        <Chronometer
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="152dp"
            android:textColor="@color/phone_time_color"
            android:textSize="14sp" />

    </RelativeLayout>
    
</com.wind.smartcover.phone.ClickView>
</RelativeLayout>