<com.wind.smartcover.clock.AnalogClock
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analog_clock"
    android:layout_centerInParent="true"
    android:layout_width="@dimen/analog_width"
    android:layout_height="@dimen/analog_height"
    >
	    <ImageView
	        android:id="@+id/clock_dial"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/preview_clock_dial_0"/>
	    <TextView 
	        android:id="@+id/clock_day"
	        android:layout_marginTop="140dp"
	        android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:text="@string/null_string"
	        />
	    <ImageView
	        android:id="@+id/clock_hour"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/preview_clock_hour_0"/>
	    <ImageView
	        android:id="@+id/clock_minute"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/preview_clock_minute_0"/>
	    <ImageView
	        android:id="@+id/clock_second"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/preview_clock_second_0"/>
</com.wind.smartcover.clock.AnalogClock>
