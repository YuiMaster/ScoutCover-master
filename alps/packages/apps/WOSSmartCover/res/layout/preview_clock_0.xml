<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style_clock="http://schemas.android.com/apk/res/com.wind.smartcover"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wind.smartcover.preview.ClockPreviewActivity" >
	<com.wind.smartcover.preview.PreviewHallClock
	    android:id="@+id/preview_hall_clock"
	    android:layout_centerHorizontal="true"
	    android:layout_width="@dimen/preview_hallclock_wh"
	    android:layout_height="@dimen/preview_hallclock_wh"
	    style_clock:preview_style="0"
	    style_clock:clock_dial="@drawable/preview_clock_dial_0"
	    style_clock:clock_hour="@drawable/preview_clock_hour_0"
	    style_clock:clock_minute="@drawable/preview_clock_minute_0"
	    style_clock:clock_second="@drawable/preview_clock_second_0"
	    >
	    <ImageView
	        android:id="@+id/clock_bg"
	        android:background="@drawable/preview_selected"
	        android:layout_centerInParent="true"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
	        />
	    <include layout="@layout/preview_digital_clock"
	        /> 
	    <include layout="@layout/preview_analog_clock"
	        />
	</com.wind.smartcover.preview.PreviewHallClock>
</RelativeLayout>