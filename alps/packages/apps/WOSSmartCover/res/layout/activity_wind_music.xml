<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/black"
    android:layout_marginTop="@dimen/activitys_padding_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        
	<RelativeLayout
	    android:visibility="invisible"
	    android:id="@+id/layout_music_empty"
	    android:layout_centerHorizontal="true" 
	    android:background="@drawable/bg_no_music"
	    android:layout_width="@dimen/second_width"
	    android:layout_height="@dimen/back_btn_padding_top"
	    >
        <TextView
            android:id="@+id/tv_no_music_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/music_title_color"
            android:text="@string/music_player"
		    android:layout_marginTop="60dp"
		    android:layout_centerHorizontal="true"
            android:textSize="17sp"
            />
        <ImageView
            android:id="@+id/iv_null_callog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    android:layout_marginTop="100dp"
		    android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_music_empty"
            />
        <TextView
            android:id="@+id/tv_no_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    android:layout_marginTop="187dp"
		    android:layout_centerHorizontal="true"
            android:textColor="@color/music_title_color"
            android:text="@string/no_playlist"
            android:textSize="14sp"
            />
	</RelativeLayout>
    
    
	<RelativeLayout
	    android:id="@+id/layout_music_main"
	    android:visibility="visible"
	    android:layout_centerHorizontal="true" 
	    android:background="@drawable/bg_music"
	    android:layout_width="@dimen/second_width"
	    android:layout_height="@dimen/back_btn_padding_top"
	    >
	    
	    <LinearLayout
		    android:layout_marginTop="66dp"
	        android:id="@+id/info"
	        android:orientation="vertical"
		    android:layout_centerHorizontal="true"
		    android:layout_width="250dp"
		    android:layout_height="wrap_content">
	        <TextView
	            android:id="@+id/tv_music_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="@color/music_title_color"
	            android:lines="1"
	            android:ellipsize="end"
	            android:gravity="center"
	            android:text="@string/no_playlist"
	            android:textSize="18sp"
	            />
	        <TextView
	            android:id="@+id/tv_music_singer"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="@color/music_singer_color"
	            android:lines="1"
	            android:ellipsize="end"
	            android:textSize="14sp"
	            />
	        
	    </LinearLayout>
	
		<LinearLayout
		    android:id="@+id/music_btns"
		    android:layout_marginTop="121dp"
		    android:layout_centerHorizontal="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >
		
		    <RelativeLayout 
		        android:layout_width="80dp"
		        android:layout_height="80dp"
		        >
			    <Button
			        android:id="@+id/btn_music_pre"
			        android:layout_width="60dp"
			        android:layout_height="60dp"
			        android:layout_centerInParent="true"
			        />
		    </RelativeLayout>
		
		    <RelativeLayout 
		        android:layout_width="80dp"
		        android:layout_height="80dp"
		        >
			    <Button
			        android:id="@+id/btn_music_play"
			        android:layout_width="60dp"
			        android:layout_height="60dp"
			        android:layout_centerInParent="true"
			        />
		    </RelativeLayout>
		
		    <RelativeLayout 
		        android:layout_width="80dp"
		        android:layout_height="80dp"
		        >
			    <Button
			        android:id="@+id/btn_music_next"
			        android:layout_width="60dp"
			        android:layout_height="60dp"
			        android:layout_centerInParent="true"
			        />
		    </RelativeLayout>
		</LinearLayout>	    
		<SeekBar
	    	style="@style/wosSeekBar"
	    	android:visibility="invisible"
	    	android:layout_marginTop="120dp"
	        android:layout_centerHorizontal="true"
	    	android:id="@+id/wos_seek_Bar"
	    	android:layout_width="150dp"
	    	android:layout_height="30dp"
	    	android:max="100"
	    	android:progress="10"  
	    	/> 
	</RelativeLayout>
	
    <Button
        android:background="@drawable/btn_back_bg"
        android:id="@+id/btn_back"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="@dimen/back_btn_padding_top"
        android:layout_width="@dimen/second_width"
        android:layout_height="@dimen/back_button_height"/>
</RelativeLayout>