<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.clockdemo.ClockActivity" >
	<com.wind.smartcover.clock.WindHallClockView
	    android:layout_width="183dp"
	    android:layout_height="183dp"
	    >
		    <ImageView
		        android:id="@+id/clock_dial"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/preview_clock_dial"/>
		    <TextView 
		        android:id="@+id/clock_day"
		        android:layout_marginTop="140dp"
		        android:layout_centerHorizontal="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="asdf"
		        />
		    <ImageView
		        android:id="@+id/clock_hour"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/preview_clock_hour"/>
		    <ImageView
		        android:id="@+id/clock_minute"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/preview_clock_minute"/>
		    <ImageView
		        android:id="@+id/clock_second"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/preview_clock_second"/>
	</com.example.uihallservice.clock.WindHallClockView>
</RelativeLayout>
