<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/activitys_padding_top"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@android:color/black"
    >
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/calllog_bg_a"
        android:layout_width="@dimen/second_width"
        android:layout_height="@dimen/callog_a_height"
       >
	    <TextView
	        android:id="@+id/calllog_title"
	        android:layout_width="match_parent"
	        android:layout_height="20dp"
	        android:layout_centerInParent="true"
	        android:gravity="center_horizontal"
	        android:textColor="@color/calllog_title_color"
	        android:textSize="@dimen/callog_title_textsize"
	        android:text="@string/callog_title" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/calllog_bg_b"
	    android:layout_marginTop="@dimen/callog_b_padding_top"
        android:layout_centerHorizontal="true"
		android:layout_width="@dimen/second_width" 
		android:layout_height="@dimen/callog_b_height"
		>
	    <LinearLayout
	        android:visibility="invisible"
	        android:id="@+id/linear_callog_empty"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <ImageView
	            android:layout_centerInParent="true"
	            android:id="@+id/iv_null_callog"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:src="@drawable/ic_callog_empty"
	            />
	        <TextView
	            android:id="@+id/tv_null_callog"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/callog_data_textsize"
	            android:text="@string/no_missed_calls"/>
	    </LinearLayout> 
		<ListView
	        android:layout_centerHorizontal="true"
			android:id="@+id/CallList" 
			android:layout_width="212dp"
			android:layout_height="match_parent">
		</ListView>
    </RelativeLayout>

    <Button
        android:background="@drawable/btn_back_bg"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="@dimen/callog_c_padding_top"
        android:id="@+id/btn_back"
        android:layout_width="@dimen/second_width"
        android:layout_height="@dimen/back_button_height" />
</RelativeLayout>
